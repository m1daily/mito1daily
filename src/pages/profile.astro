---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfileCard from '../components/ProfileCard.astro';
import members from '../data/members.json';
import { Image } from 'astro:assets';
const pageTitle = 'Profile';
const files = await Astro.glob("../assets/profile/*.{png,jpg,jpeg}");
const images = files.reduce((acc, file) => {
  acc[file.default.src.split('/').pop().split('.')[0]] = file.default;
  return acc;
}, {});
---

<BaseLayout pageTitle={pageTitle}>
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
      <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">About Us</h2>
      <p class="mt-1 text-gray-600 dark:text-neutral-400">みといちでいりーについて</p>
    </div>

    <div class="grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center">
      <div class="relative ms-4">
        <Image class="w-full rounded-md" src={images.monitor} alt="monitor" />
      </div>

      <div>
        <h3 class="block text-lg font-bold text-gray-800 sm:text-3xl lg:text-3xl lg:leading-tight dark:text-white">History</h3>
        <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">
          みといちでいりーは、時間割撮影の手間を省くために作られた組織です。2020年に設立された当時は手動で時間割を撮影していたため、投稿のし忘れなどの問題がありました。そこで、自動で時間割の更新確認,画像投稿をするシステムを開発し、現在に至ります。
        </p>

        <div class="mt-7 grid gap-3 w-full sm:inline-flex">
          <a class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-gray dark:border-gray2 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
            更新履歴
          </a>
        </div>
      </div>
    </div>

    <div class="grid mt-20 md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center">
      <div class="relative ms-4">
        <Image class="w-full rounded-md border border-gray-200" src={images.github} alt="GitHub" />
      </div>

      <div class="justify-center">
        <h3 class="block text-lg font-bold text-gray-800 sm:text-3xl lg:text-3xl lg:leading-tight dark:text-white">Technology</h3>
        <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">
          学校が公開しているGoogleスプレッドシートを自動で読み取り、時間割の更新を確認して画像を投稿しています。現在は、GitHubでソースコードを公開しています。
        </p>

        <div class="mt-7 grid gap-3 w-full sm:inline-flex">
          <a class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-gray dark:border-gray2 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
            仕様を見る
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
      <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
        <h2 class="text-2xl font-bold md:text-4xl md:leading-tight dark:text-white">Members</h2>
        <p class="mt-1 text-gray-600 dark:text-neutral-400">ゆかいな仲間たち</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {members.map((member) => (
          <ProfileCard {...member} />
        ))}

        <a class="col-span-full lg:col-span-1 group flex flex-col justify-center text-center rounded-xl p-4 md:p-6 border border-dashed border-gray-200 hover:shadow-sm focus:outline-none focus:shadow-sm dark:border-neutral-700" href="">
          <h3 class="text-lg text-gray-800 dark:text-neutral-200">Coming Soon...</h3>
          <div>
            <span class="inline-flex text-base items-center gap-x-2 text-blue-600 group-hover:text-blue-700 group-focus:text-blue-700 dark:text-blue-500 dark:group-hover:text-blue-400 dark:group-focus:text-blue-400">
              上へ戻る
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
            </span>
          </div>
        </a>

      </div>
    </div>
</BaseLayout>
