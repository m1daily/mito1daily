---
const { name } = Astro.props;
const { color } = Astro.props;
const { link } = Astro.props;
---
<style define:vars={{color}}>
  .text-service-card {
    color: var(--color);
  }
</style>

<div class="col-span-1">
  <div class="h-full p-4 flex flex-col justify-between bg-gray-light border-gray-200 rounded-xl dark:bg-gray dark:border-gray2">
    <div class="flex flex-col items-center text-center">
      <span class="font-semibold text-lg text-service-card dark:text-neutral-200">{name}</span>
      <!-- <p class="text-xs text-gray-500 dark:text-neutral-500">{bio}</p> -->
    </div>
    <div class="mt-2">
      <a class="w-full py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border-gray-200 bg-white text-gray-800 shadow-2xs hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-gray-50 dark:bg-gray-dark dark:border-gray2 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href={link}>
        使ってみる
      </a>
    </div>
  </div>
</div>
